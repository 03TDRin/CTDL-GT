#include <iostream>
#include <stdio.h>
#include <conio.h>
#define Max100

using namespace std;

void nhap(float a[], int &n){
 do{
   cout<<"Nhap so phan tu :";
   cin>>n;
   if(n<=0 || n>max){
     cout<<"So phan tu khong hop le!"<<endl;
     }
    }while(n<=0 || n>max);
    for(int i=0; i<n; i++){
      cout<<"Nhap a :";
      cin>>a;
      }
     }
void xuat(float a[], int n){
  for(int i=0; i<n; i++){
    cout<<"%8.3f"<<a[i]<<endl;
    }
  }
int demDuong(float a[], int n){
  if(n==0){
    return 0;
    }
  int dem=demDuong(a, n-1);
  if(a[n-1]>0){
    return 1+ demDuong(a, n-1);
    return demDuong(a, n-1);
    }
  }
int main(){
  int n;
  float a[max];
  nhap(a, n);
  xuat(a, n);
  int dem=demDuong(a, n);
  cout<<"Co %d so duong"<<dem<<endl;
  return 0;
  }
